<localView:BaseDialogWindow
	x:Class="UnitTestBoilerplate.View.TestFileConflict"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:UnitTestBoilerplate"
	xmlns:localView="clr-namespace:UnitTestBoilerplate.View"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Width="400"
	Height="160"
	d:DesignHeight="160"
	d:DesignWidth="400"
	WindowStartupLocation="CenterOwner"
	mc:Ignorable="d">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<TextBlock
			Name="messageTextBlock"
			Margin="16 4 16 6"
			Text="Test file already exists:"
			TextWrapping="Wrap" />
		<StackPanel
			Grid.Row="2"
			Margin="16 0 16 16"
			HorizontalAlignment="Right"
			Orientation="Horizontal">
			<Button
				Padding="12 6"
				Click="OnOverwriteClick"
				Content="Overwrite" />
			<Button
				Margin="10 0 0 0"
				Padding="12 6"
				Click="OnNewNameClick"
				Content="Use new name" />
			<Button
				Margin="10 0 0 0"
				Padding="12 6"
				Click="OnCancelClick"
				Content="Cancel" />
		</StackPanel>
	</Grid>
</localView:BaseDialogWindow>
